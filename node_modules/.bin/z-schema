#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../@apidevtools/swagger-parser/node_modules/z-schema/bin/z-schema" "$@"
  ret=$?
else 
  node  "$basedir/../@apidevtools/swagger-parser/node_modules/z-schema/bin/z-schema" "$@"
  ret=$?
fi
exit $ret
